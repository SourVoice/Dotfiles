{
  "suggest.labelMaxLength": 60,
  "suggest.completionItemKindLabels":{
    "class": "\uf0e8",
    "color": "\ue22b"
  },
  "cmake.formatter": "cmake-format",
  "languageserver":{
    "ccls":{ 
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/", ".vscode/"],
      "initializationOptions": {
		"highlight": {"isRanges": true},
        "cache": {
          "directory": "/tmp/ccls"
        },
		"clang": {
			"resourceDir": "/usr/lib/clang/10.0.0"
		},
		"completion": {
			"detailedLable": true,
			"placeholer": true
		},
		"index": {
			"onChange": false,
			"initialNoLinkage": true,
			"threads": 2
		},
		"compilationDatabaseDirectory": "./.vscode/"
      }
    },
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": ["cmake"],
      "rootPatterns": [
        "build/"
      ],
      "initializationOptions": {
          "buildDirectory": "build"
      }
    },
	"bash": {
		"command": "bash-language-server",
		"args": ["start"],
		"filetypes": [".sh"],
		"ignoredRootPaths": ["~"]
	}
  }
}
